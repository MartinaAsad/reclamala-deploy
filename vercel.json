{
  "version": 2,
  "builds": [
    {
      "src": "frontend-reclamala/package.json",  
      "use": "@vercel/static-build",
      "config": { "distDir": "build", "clean":true } 
    },
    {
      "src": "backend/server.js",  
      "use": "@vercel/node"
    }
  ],
  "routes": [
    {
      "src": "/api/.*",  
      "dest": "backend/index.js"  
    },
    {
      "src": "/(.*)",  
      "dest": "frontend-reclamala/build/$1"  
    }
  ]
}